mixin pagiantion(objectPagination)
  nav
    ul(class="pagination")
      li(class="page-item")
        button(
          class="page-link"
          button-pagination=1
        ) Trang đầu

      if(objectPagination.currentPage > 1)
        li(class="page-item")
          button(
            class="page-link"
            button-pagination=objectPagination.currentPage-1
          ) Trang trước

      - for (var i = 1; i <= objectPagination.totalPage; i++)
        li(class=`page-item ${objectPagination.currentPage == i ? "active" : ""}`)
          button(
            class="page-link"
            button-pagination=i
          ) #{i}

      if(objectPagination.currentPage < objectPagination.totalPage)
        li(class="page-item")
          button(
            class="page-link"
            button-pagination=objectPagination.currentPage+1
          ) Kế tiếp

      li(class="page-item")
        button(
          class="page-link"
          button-pagination=objectPagination.totalPage
        ) Trang cuối